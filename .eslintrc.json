{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "no-var": 2,
    "no-label-var": 2,
    "no-multi-spaces": 2,
    "no-trailing-spaces": 2,
    "no-unused-expressions": 2,
    "eqeqeq": 2,
    "semi": 2,
    "semi-spacing": [2, {"before": false, "after": true}],
    "space-infix-ops": 2,
    "yoda": [2, "never"],
    "no-console": [1, { "allow": ["warn", "error"] }],
    "prefer-const": 2,
    "no-undef-init": 2
  }
}
